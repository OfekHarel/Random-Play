<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_gravity="center_vertical"
    android:background="@color/transparent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/marvel_logo"
        android:translationY="-150dp"
        android:scaleX="0.65"
        android:scaleY="0.65"
        android:visibility="invisible"
        android:id="@+id/marvel_logo"
        android:contentDescription="TODO" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/disney_logo"
        android:translationY="-65dp"
        android:scaleX="0.65"
        android:scaleY="0.65"
        android:visibility="invisible"
        android:id="@+id/disney_logo"
        android:contentDescription="TODO" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lord_of_the_rings_logo"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:scaleX="0.65"
        android:scaleY="0.65"
        android:id="@+id/lotr_logo"
        android:contentDescription="TODO" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/harry_potter_logo"
        android:translationY="-170dp"
        android:scaleX="0.65"
        android:scaleY="0.65"
        android:visibility="visible"
        android:id="@+id/hp_logo"
        android:contentDescription="TODO" />
</RelativeLayout>