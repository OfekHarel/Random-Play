<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_background"
    tools:context=".Activities.history.HistoryMovieComponActivity">

    <include
        android:id="@+id/logos"
        layout="@layout/activity_movie_logos" />

    <TextView
        android:id="@+id/h_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/logos"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Iron Man 2"
        android:textColor="@color/app_black"
        android:textSize="32sp"
        android:translationY="50dp"/>

    <TextView
        android:id="@+id/h_e_moods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/h_info"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="In Moods: "
        android:textColor="@color/app_black"
        android:textSize="18sp"
        android:translationY="100dp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@+id/h_e_moods"
        android:layout_alignParentBottom="true"
        android:translationY="150dp">
        <include
            layout="@layout/result_btns"
            android:layout_height="280dp"
            android:layout_width="wrap_content"/>
    </LinearLayout>

</RelativeLayout>