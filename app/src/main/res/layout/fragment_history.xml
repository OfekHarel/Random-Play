<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.history.HistoryFragment"
    android:paddingHorizontal="20dp"
    android:translationY="10dp">

    <ListView
        android:id="@+id/hist_list"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_gravity="center_vertical"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"/>

    <TextView
        android:id="@+id/hist_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/nothing_here_yet"
        android:textStyle="bold"
        android:textSize="35sp"
        android:gravity="center"
        android:translationY="-150dp"
        android:textColor="@color/app_black"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/clear_hist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hist_list"
        android:layout_marginVertical="60dp"
        android:src="@drawable/clear_btn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ripple"
        android:visibility="invisible"/>
</RelativeLayout>