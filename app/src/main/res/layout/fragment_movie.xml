<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.series.SeriesFragment"
    android:paddingHorizontal="20dp"
    android:translationY="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Movies"
        android:textColor="@color/app_black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginVertical="10dp"
        android:gravity="center_horizontal"
        android:id="@+id/movies_text"/>

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/movies_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:np_width="64dp"
        app:np_height="170dp"
        app:np_dividerColor="@color/app_grey"
        app:np_selectedTextColor="@color/black"
        app:np_selectedTextSize="23sp"
        app:np_textColor="@color/app_grey"
        android:layout_marginVertical="35dp"
        app:np_textSize="19sp"/>

    <TextView
        android:id="@+id/movies_mood_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:text="Vibe"
        android:textColor="@color/app_black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:translationY="50dp"
        android:gravity="center_horizontal"
        android:layout_alignBottom="@+id/movies_scroll"/>


    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/movies_scroll_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:np_width="64dp"
        app:np_height="170dp"
        app:np_dividerColor="@color/app_grey"
        app:np_selectedTextColor="@color/black"
        app:np_selectedTextSize="23sp"
        app:np_textColor="@color/app_grey"
        app:np_textSize="19sp"
        android:translationY="75dp"
        android:layout_alignTop="@id/movies_mood_title"/>

    <ImageButton
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ripple"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:src="@drawable/generate"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:layout_alignBottom="@+id/movies_scroll_mood"
        android:layout_alignParentBottom="true"
        android:translationY="10dp"
        android:id="@+id/movies_gen_btn"/>


</RelativeLayout>