<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ResultActivity"
    android:background="@drawable/grad_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        tools:layout_editor_absoluteX="-33dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_only"
            android:paddingVertical="25dp"
            android:layout_gravity="center_horizontal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="35dp"
            android:background="@color/app_grey"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/friends_logo"
                android:translationY="-130dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:visibility="visible"
                android:id="@+id/friends_logo"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/himym_logo"
                android:translationY="-80dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:visibility="invisible"
                android:id="@+id/himym_logo"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bnn_logo"
                android:translationY="-80dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:visibility="invisible"
                android:id="@+id/bnn_logo"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/the_office_logo"
                android:translationY="-20dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:visibility="invisible"
                android:id="@+id/the_office_logo"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tbbt_logo"
                android:translationY="-222dp"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:visibility="invisible"
                android:id="@+id/tbbt_logo_logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Season 12 Episode 9"
                android:textSize="28sp"
                android:textColor="@color/app_black"
                android:gravity="center_horizontal"
                android:layout_alignBottom="@+id/friends_logo"
                android:translationY="-185dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/gen_info"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The One With Horizon"
                android:textSize="22sp"
                android:textColor="@color/app_black"
                android:gravity="center_horizontal"
                android:layout_alignBottom="@+id/gen_info"
                android:translationY="-120dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/episode_name"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/genrate_again"
                android:background="@drawable/ripple"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/episode_name"
                android:scaleY="0.9"
                android:scaleX="0.9"
                android:translationY="65dp"
                android:onClick="clickRegenerate"/>
        </RelativeLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>