<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:layout_gravity="center_horizontal"
    android:paddingHorizontal="50dp">

    <Button
        android:id="@+id/regen_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@color/transparent"
        android:translationY="50dp"
        android:onClick="clickRegenerate"
        android:outlineProvider="bounds"
        android:text="Regenerate"
        android:textColor="@color/app_black"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/watch_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/regen_btn"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent"
        android:gravity="center"
        android:onClick="clickWatchNow"
        android:outlineProvider="bounds"
        android:text="Watch now"
        android:textSize="18sp"
        android:textColor="@color/app_black"
        android:textStyle="bold"
        android:translationY="115dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationY="50dp"
        android:layout_alignParentBottom="true">

        <include
            layout="@layout/activity_streaming_services_logo_manager"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>