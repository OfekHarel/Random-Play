<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:background="@drawable/grad_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        tools:layout_editor_absoluteX="-33dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/logo"
            android:paddingVertical="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="35dp"
            android:background="@color/app_grey"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:translationY="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Series"
                android:textColor="@color/app_black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginVertical="10dp"
                android:gravity="center_horizontal"
                android:id="@+id/series_text"/>

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/series_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:np_width="64dp"
                app:np_height="170dp"
                app:np_dividerColor="@color/app_grey"
                app:np_selectedTextColor="@color/black"
                app:np_selectedTextSize="23sp"
                app:np_textColor="@color/white"
                android:layout_marginVertical="35dp"
                app:np_textSize="19sp"/>

            <TextView
                android:id="@+id/mood_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:text="Mood"
                android:textColor="@color/app_black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:translationY="50dp"
                android:gravity="center_horizontal"
                android:layout_alignBottom="@+id/series_scroll"/>


            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/scroll_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:np_width="64dp"
                app:np_height="170dp"
                app:np_dividerColor="@color/app_grey"
                app:np_selectedTextColor="@color/black"
                app:np_selectedTextSize="23sp"
                app:np_textColor="@color/white"
                app:np_textSize="19sp"
                android:translationY="75dp"
                android:layout_alignTop="@id/mood_title"/>

            <ImageButton
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ripple"
                android:scaleX="0.657"
                android:scaleY="0.657"
                android:src="@drawable/generate"
                android:onClick="clickGenerate"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:gravity="center_horizontal"
                android:layout_alignBottom="@+id/scroll_mood"
                android:layout_alignParentBottom="true"
                android:translationY="10dp"/>


        </RelativeLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>