<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.preff.PrefFragment"
    android:paddingHorizontal="20dp"
    android:translationY="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Series you watch"
            android:gravity="center_horizontal"
            android:textColor="@color/app_black"
            android:textSize="25sp"
            android:paddingVertical="20dp"
            android:textStyle="bold"
            android:id="@+id/series_pref_title"/>

        <ListView
            android:id="@+id/_series_pref_list_set"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="30dp"
            android:layout_gravity="center_vertical"
            android:divider="@android:color/transparent"
            android:dividerHeight="1dp"
            android:layout_below="@+id/series_pref_title"
            android:scrollbars="none" />

        <ListView
            android:id="@+id/series_pref_list"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_below="@+id/_series_pref_list_set"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="2dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="1dp"
            android:smoothScrollbar="true" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="50dp"
            android:layout_below="@+id/series_pref_list" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movies you watch"
            android:gravity="center_horizontal"
            android:textColor="@color/app_black"
            android:textSize="25sp"
            android:paddingVertical="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/view"
            android:id="@+id/movie_pref_title"/>

        <ListView
            android:id="@+id/movie_pref_list_set"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="30dp"
            android:layout_gravity="center_vertical"
            android:divider="@android:color/transparent"
            android:dividerHeight="1dp"
            android:layout_below="@+id/movie_pref_title"
            android:scrollbars="none" />

        <ListView
            android:id="@+id/movie_pref_list"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_below="@+id/movie_pref_list_set"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="2dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="1dp"
            android:smoothScrollbar="true" />
    </RelativeLayout>
</ScrollView>