<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.history.HistoryComponActivity"
    android:background="@drawable/grad_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        tools:layout_editor_absoluteX="-33dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_only"
            android:paddingVertical="25dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="TODO" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="35dp"
            android:background="@color/app_grey"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/activity_series_logos"
                android:id="@+id/logos"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Season 12 Episode 9"
                android:textSize="28sp"
                android:textColor="@color/app_black"
                android:gravity="center_horizontal"
                android:layout_alignBottom="@+id/logos"
                android:translationY="-250dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/h_info"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The One With Horizon"
                android:textSize="22sp"
                android:textColor="@color/app_black"
                android:gravity="center_horizontal"
                android:layout_alignBottom="@+id/h_info"
                android:translationY="-180dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/h_episode_name"/>

            <TextView
                android:id="@+id/h_e_moods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In Moods: "
                android:textSize="15sp"
                android:textColor="@color/app_black"
                android:gravity="center_horizontal"
                android:layout_alignBottom="@+id/h_info"
                android:translationY="-80dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>