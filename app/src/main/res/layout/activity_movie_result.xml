<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.movies.MovieResultActivity"
    android:background="@drawable/grad_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        tools:layout_editor_absoluteX="-33dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/activity_movie_logos"
                android:id="@+id/logos"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iron Man 2"
                android:textSize="37sp"
                android:textColor="@color/app_black"
                android:gravity="center_horizontal"
                android:layout_alignBottom="@+id/logos"
                android:translationY="-200dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:fontFamily="monospace"
                android:id="@+id/movie_gen_info"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In Moods: "
                android:textSize="22sp"
                android:textColor="@color/app_black"
                android:gravity="center_horizontal"
                android:translationY="330dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:id="@+id/movie_moods"/>

            <include layout="@layout/result_btns"
                />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>