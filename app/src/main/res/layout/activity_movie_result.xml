<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.movies.MovieResultActivity"
    android:background="@drawable/grad_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        tools:layout_editor_absoluteX="-33dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_only"
            android:paddingVertical="25dp"
            android:layout_gravity="center_horizontal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="35dp"
            android:background="@color/app_grey"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/activity_movie_logos"
                android:id="@+id/logos"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iron Man 2"
                android:textSize="25sp"
                android:textColor="@color/app_black"
                android:gravity="center_horizontal"
                android:layout_alignBottom="@+id/logos"
                android:translationY="-230dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/movie_gen_info"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In Moods: "
                android:textSize="15sp"
                android:textColor="@color/app_black"
                android:gravity="center_horizontal"
                android:translationY="330dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:id="@+id/movie_moods"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/genrate_again"
                android:background="@drawable/ripple"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/movie_gen_info"
                android:scaleY="0.9"
                android:scaleX="0.9"
                android:onClick="clickRegenerate"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>